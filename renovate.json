{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices",
    ":dependencyDashboard",
    ":pinAllExceptPeerDependencies",
    "group:monorepos",
    "group:recommended"
  ],
  "rangeStrategy": "bump",
  "prConcurrentLimit": 10,
  "prHourlyLimit": 6,
  "lockFileMaintenance": {
    "enabled": true,
    "schedule": ["before 3am on Monday"]
  },
  "vulnerabilityAlerts": {
    "enabled": true,
    "labels": ["security"],
    "schedule": ["at any time"]
  },
  "packageRules": [
    {
      "description": "Require approval for major updates",
      "matchUpdateTypes": ["major"],
      "dependencyDashboardApproval": true
    },
    {
      "description": "Automerge minor updates for stable versions",
      "matchUpdateTypes": ["minor"],
      "matchCurrentVersion": "!/^0/",
      "automerge": true,
      "automergeType": "pr",
      "labels": ["automerge"],
      "minimumReleaseAge": "3 days"
    },
    {
      "description": "Automerge patch updates for stable versions",
      "matchUpdateTypes": ["patch"],
      "matchCurrentVersion": "!/^0/",
      "automerge": true,
      "automergeType": "pr",
      "labels": ["automerge"],
      "minimumReleaseAge": "1 day"
    },
    {
      "description": "Require approval for unstable versions (0.x)",
      "matchCurrentVersion": "/^0/",
      "matchUpdateTypes": ["minor", "patch"],
      "dependencyDashboardApproval": true,
      "labels": ["unstable-version"]
    },
    {
      "description": "High priority for security vulnerabilities",
      "matchUpdateTypes": ["major", "minor", "patch"],
      "vulnerabilityAlerts": {
        "enabled": true
      },
      "prPriority": 10
    }
  ]
}
